# Production Environment Configuration
NODE_ENV=production

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ai-career-portal-prod?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secure-production-jwt-secret-min-256-bits
JWT_EXPIRE=24h

# Server Configuration
PORT=5000
HOST=0.0.0.0

# Frontend URL (update with your production domain)
FRONTEND_URL=https://your-production-domain.com

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=/app/uploads
ALLOWED_FILE_TYPES=pdf,doc,docx

# AI Services
GEMINI_API_KEY=your-production-gemini-api-key
OPENAI_API_KEY=your-production-openai-api-key
HUGGINGFACE_API_KEY=your-production-huggingface-api-key

# Email Service (Production)
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@your-domain.com

# Rate Limiting (Stricter for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Security
BCRYPT_ROUNDS=12
CORS_ORIGIN=https://your-production-domain.com
TRUST_PROXY=true

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn-url

# Database Connection Pool
DB_MIN_POOL_SIZE=5
DB_MAX_POOL_SIZE=50
DB_CONNECTION_TIMEOUT=30000

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# AWS S3 (for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name